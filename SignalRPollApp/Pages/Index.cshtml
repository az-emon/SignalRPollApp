@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <br /><br />
        <div class="container">
            @*<div class="row">
                <div class="col-12">
                    User: <input type="text" id="userInput" />                    
